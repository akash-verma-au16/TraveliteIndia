<div>
  <hr class='mb-3' />
  <h3 class='text-danger text-capitalize container'>{{username}}</h3>
  <div class='container'>
    <p class='text-muted'>
      Email :
      {{useremail}}
      <span class='float-end me-5'>
        <button id='delete-user' class='btn btn-danger {{id}}'>Delete Profile</button>
      </span>
    </p>
    <p class='text-muted'>Role : {{userrole}}</p>
  </div>
  <hr />
  <h3 class='text-warning container'>Your Tours:</h3>
  <hr class='my-3' />
  <ul class='container d-flex flex-wrap'>
    {{#each myTours}}
      <li class='list-group-item mb-2 py-3 rounded me-3' style='width: 15rem'>
        {{#with this}}
          <div>
            <img
              src='/uploads/{{photo}}'
              alt='...'
              class='img-thumbnail'
              style='width: 300px; height: 200px'
            />
          </div>
          <div class='d-flex flex-column justify-content-between ms-4 w-75'>
            <div>
              <h5 class='card-title text-info mt-2'>{{title}}</h5>
              <span class='text-warning mb-2'>Rating: {{averageRating}}</span>
              <span class='float-end text-danger'>~
                {{daysleft}}
                days left</span>
            </div>
            <button
              id='unsubscribe'
              class='btn btn-danger mt-3 {{_id}} {{seats}}'
            >Unsubscribe</button>
          </div>
        {{/with}}
      </li>
    {{/each}}
  </ul>
</div>