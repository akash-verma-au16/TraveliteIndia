<div class='bg-dark pb-5 pt-1'>
  <div class='bg-secondary'>
    <hr class='text-light' />
    <h3 class='text-warning text-center text-uppercase container'>Our Agencies</h3>
    <hr class='text-light' />
  </div>
  <div class='d-flex'>
    <div class='w-25 ms-5'>
      <form>
        <h4 for='daysleft' class='text-danger mt-3'>Sort By:</h4>
        <div class='ms-3 mt-3'>
          <div class='form-check'>
            <input
              class='form-check-input'
              type='radio'
              name='sort'
              value='createdAt'
              id='createdAt'
            />
            <label class='form-check-label text-light' for='createdAt'>
              Created: Recently
            </label>
          </div>
          <div class='form-check'>
            <input
              class='form-check-input'
              type='radio'
              name='sort'
              value='-createdAt'
              id='-createdAt'
            />
            <label class='form-check-label text-light' for='-createdAt'>
              Created: Later
            </label>
          </div>
        </div>
        <h4 for='daysleft' class='text-danger mt-3'>Limit:</h4>
        <div class='ms-3 mt-3'>
          <div class='form-check'>
            <input
              class='form-check-input'
              type='radio'
              name='limit'
              value='3'
              id='limit-3'
            />
            <label class='form-check-label text-light' for='limit-3'>
              3
            </label>
          </div>
          <div class='form-check'>
            <input
              class='form-check-input'
              type='radio'
              name='limit'
              value='5'
              id='limit-5'
            />
            <label class='form-check-label text-light' for='limit-5'>
              5
            </label>
          </div>
          <div class='form-check'>
            <input
              class='form-check-input'
              type='radio'
              name='limit'
              value='10'
              id='limit-10'
            />
            <label class='form-check-label text-light' for='limit-10'>
              10
            </label>
          </div>
        </div>
        <div class='d-flex justify-content-end mt-5 me-3'>
          <button
            type='submit'
            class='btn btn-outline-danger me-3'
          >Filter</button>
          <button
            id='clear-btn'
            type='submit'
            class='btn btn-outline-secondary ms-3'
          >Clear</button>
        </div>
      </form>
    </div>
    <div class='container w-75'>
      <ul class='list-group'>
        {{#each agencies}}
          <li class='list-group-item d-flex mb-2 rounded'>
            {{#with this}}
              <div class='w-25'>
                <img
                  src='/uploads/{{photo}}'
                  alt='...'
                  class='img-thumbnail'
                  style='height: 250px; width: 350px;'
                />
              </div>
              <div class='d-flex flex-column justify-content-between w-75 px-5'>
                <div>
                  <h2 class='text-uppercase text-info pt-3'>{{name}}</h2>
                  <hr />
                  <div class='d-flex'>
                    <span class='w-50'>Website: {{website}} </span>
                    <span class='w-50'>Email: {{email}}</span>
                  </div>
                  <div class='d-flex'>
                    <span class='w-50'>Phone: {{phone}} </span>
                    <span class='w-50'>Address: {{address}}</span>
                  </div>
                  <div class='text-truncate me-5 mt-2'>Description:
                    {{description}}</div>
                </div>
                <div>
                  <a
                    href='/agency/{{_id}}'
                    class='btn btn-secondary w-100'
                  >Explore More</a>
                </div>
              </div>
            {{/with}}
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>