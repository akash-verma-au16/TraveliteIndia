<div class='bg-dark pb-5 pt-1'>
  <div class='bg-secondary'>
    <hr class='text-light' />
    <h3 class='text-warning text-center text-uppercase container'>Our Tours</h3>
    <hr class='text-light' />
  </div>
  <div class='d-flex'>
    <div class='w-25 ms-5'>
      <form>
        <h4 for='daysleft' class='text-danger mt-3'>Sort By:</h4>
        <div class='ms-3 mt-3'>
          <div class='form-check'>
            <input
              class='form-check-input'
              type='radio'
              name='sort'
              value='cost'
              id='cost'
            />
            <label class='form-check-label text-light' for='cost'>
              Cost: LOW to HIGH
            </label>
          </div>
          <div class='form-check'>
            <input
              class='form-check-input'
              type='radio'
              name='sort'
              value='-cost'
              id='-cost'
            />
            <label class='form-check-label text-light' for='-cost'>
              Cost: HIGH to LOW
            </label>
          </div>
          <div class='form-check'>
            <input
              class='form-check-input'
              type='radio'
              name='sort'
              value='-createdAt'
              id='-createdAt'
            />
            <label class='form-check-label text-light' for='-createdAt'>
              Created: Recently
            </label>
          </div>
          <div class='form-check'>
            <input
              class='form-check-input'
              type='radio'
              name='sort'
              value='createdAt'
              id='createdAt'
            />
            <label class='form-check-label text-light' for='createdAt'>
              Created: Later
            </label>
          </div>
          <div class='form-check'>
            <input
              class='form-check-input'
              type='radio'
              name='sort'
              value='averageRating'
              id='averageRating'
            />
            <label class='form-check-label text-light' for='averageRating'>
              Rating: LOW to HIGH
            </label>
          </div>
          <div class='form-check'>
            <input
              class='form-check-input'
              type='radio'
              name='sort'
              value='-averageRating'
              id='-averageRating'
            />
            <label class='form-check-label text-light' for='-averageRating'>
              Rating: HIGH to LOW
            </label>
          </div>
        </div>
        <h4 for='daysleft' class='text-danger mt-3'>Limit:</h4>
        <div class='ms-3 mt-3'>
          <div class='form-check'>
            <input
              class='form-check-input'
              type='radio'
              name='limit'
              value='3'
              id='limit-3'
            />
            <label class='form-check-label text-light' for='limit-3'>
              3
            </label>
          </div>
          <div class='form-check'>
            <input
              class='form-check-input'
              type='radio'
              name='limit'
              value='5'
              id='limit-5'
            />
            <label class='form-check-label text-light' for='limit-5'>
              5
            </label>
          </div>
          <div class='form-check'>
            <input
              class='form-check-input'
              type='radio'
              name='limit'
              value='10'
              id='limit-10'
            />
            <label class='form-check-label text-light' for='limit-10'>
              10
            </label>
          </div>
        </div>
        <div class='d-flex justify-content-end mt-5 me-3'>
          <button
            type='submit'
            class='btn btn-outline-danger me-3'
          >Filter</button>
          <button
            id='clear-btn'
            type='submit'
            class='btn btn-outline-secondary ms-3'
          >Clear</button>
        </div>
      </form>
    </div>
    <div class='container w-75'>
      <ul class='list-group'>
        {{#each tours}}
          <li class='list-group-item d-flex mb-2 py-3 rounded'>
            {{#with this}}
              <div class='w-25'>
                <img
                  src='/uploads/{{photo}}'
                  alt='...'
                  class='img-thumbnail'
                  style='width: 300px; height: 200px'
                />
              </div>
              <div class='d-flex flex-column justify-content-between ms-4 w-75'>
                <div>
                  <h5 class='card-title text-info'>
                    {{title}}
                    <span class='text-danger float-end me-5'>Seats Left:
                      {{seats}}</span>
                  </h5>
                  <div class='text-warning mb-2'>Rating: {{averageRating}}</div>
                  <h6 class='card-subtitle mb-2 text-muted'>
                    From:
                    {{from}}
                    - To:
                    {{to}}<br />
                    Duration:
                    {{duration}}
                    days<br />
                    Cost: $
                    {{cost}}
                  </h6>
                  <p class='text-truncate me-5'>Description:
                    {{description}}</p>
                </div>
                <div class='me-3 d-flex'>
                  <a
                    href='/tours/{{_id}}/enroll'
                    class='btn btn-secondary w-50 me-3'
                  >
                    Book Tour
                  </a>
                  <a href='/tours/{{_id}}' class='btn btn-primary w-50 ms-3'>
                    Get Tour Info
                  </a>
                </div>
              </div>
            {{/with}}
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>